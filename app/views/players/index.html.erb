<h1>Listing players</h1>

<table>
  <tr>
    <th>Given name</th>
    <th>Surname</th>
    <th>Home club</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Delivering hand</th>
    <th>Year started curling</th>
    <th>Notes</th>
    <th>Throwing order</th>
    <th>Skip</th>
    <th>Vice</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.given_name %></td>
    <td><%= player.surname %></td>
    <td><%= player.home_club %></td>
    <td><%= player.city %></td>
    <td><%= player.state %></td>
    <td><%= player.country %></td>
    <td><%= player.delivering_hand %></td>
    <td><%= player.year_started_curling %></td>
    <td><%= player.notes %></td>
    <td><%= player.throwing_order %></td>
    <td><%= player.skip %></td>
    <td><%= player.vice %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

